<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/tabcredits"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FF000000">
	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="#FF000000">
		
		<ImageView
			android:id="@+id/credits_logo"
			android:src="@drawable/logo_wozia"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:scaleType="centerInside" />
	
		<TextView android:id="@+id/label_version_desc"
			style="@style/Desc"
			android:gravity="center_vertical|center_horizontal"
			android:layout_below="@id/credits_logo"
			android:text="@string/tab_credits_version_desc" />
	
		<TextView android:id="@+id/label_copyright"
			style="@style/Text"
			android:gravity="center_vertical|center_horizontal"
			android:layout_below="@id/label_version_desc"
			android:text="@string/tab_credits_copyright" />
	
	</RelativeLayout>
</ScrollView>